{
  "name": "release-it-pnpm-monorepo",
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@8.15.3",
  "scripts": {
    "build": "pnpm --filter \"./packages/**\" -r run build",
    "dev": "pnpm --filter \"./packages/**\" -r run dev",
    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "release-it": {
    "plugins": {
      "./packages/release-it-pnpm/src/index.js": {}
    },
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "hooks": {
      "before:init": [
        "pnpm run lint",
        "pnpm run typecheck",
        "pnpm run test --run"
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "bunchee": "^4.4.6",
    "eslint": "^8.56.0",
    "eslint-config-hyoban": "^0.1.6",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
